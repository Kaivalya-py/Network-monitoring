# Network Monitoring Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_RECIPIENTS=admin@company.com,network@company.com

# Monitoring Thresholds
BANDWIDTH_THRESHOLD_MBPS=100
CPU_THRESHOLD_PERCENT=80
MEMORY_THRESHOLD_PERCENT=85
DISK_THRESHOLD_PERCENT=90
PING_TIMEOUT_SECONDS=5

# Monitoring Intervals (seconds)
NETWORK_CHECK_INTERVAL=30
SYSTEM_CHECK_INTERVAL=60
DEVICE_PING_INTERVAL=120

# Devices to monitor (comma-separated)
MONITORED_DEVICES=8.8.8.8,1.1.1.1,192.168.1.1

# Alert Settings
ALERT_COOLDOWN_MINUTES=15
LOG_LEVEL=INFO
LOG_FILE=logs/network_monitor.log

# Dashboard Settings (Optional)
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
DASHBOARD_AUTO_REFRESH=true
